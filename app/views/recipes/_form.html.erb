  </div>
  <div class="field">
    <%= form.label :"Cooking Time" %><br />
    <%= form.text_field :cooking_time, placeholder: "Enter cookiing time" %>
  </div>
  <div class="field">
    <%= form.label :Description %><br />
    <%= form.text_area :description, placeholder: "Enter recipe description" %>
  </div>
   <div class="field">
    <%= form.label :public %>
    <%= form.check_box :public %>
  </div>
  <div>
    <%= form.submit %>
