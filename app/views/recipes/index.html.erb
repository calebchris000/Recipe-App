<div class="container">
  <h1 class="recipe-header">Recipes</h1>

  <div id="recipes">
    <% if @recipes.empty? %>
      <p class="recipe-paragraph">No recipes available! </p>
    <% else %>
      <% @recipes.each do |recipe| %>
        <div class="a">
          <div class="one">
            <%= recipe.name %>
              <%= button_to "Destroy this recipe", recipe_path(recipe), method: :delete %>
            </div>
            
          <div>
            <p><%= recipe.description %></p>
          </div>
          
    </div>
      <% end %>
  <% end %>
  </div>
  <%= link_to "Add Recipe", new_recipe_path %>
</div>